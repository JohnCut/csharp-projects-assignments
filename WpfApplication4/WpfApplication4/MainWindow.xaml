        <ComboBox x:Name="hasarCb" HorizontalAlignment="Left" Margin="108,202,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Var"/>
            <ComboBoxItem Content="Yok"/>
        </ComboBox>
        <TextBox x:Name="myiliTb" HorizontalAlignment="Left" Height="23" Margin="108,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ekleButton" Content="Ekle" HorizontalAlignment="Left" Margin="135,229,0,0" VerticalAlignment="Top" Width="62" Height="20"/>
        <DataGrid x:Name="MainDGrid" HorizontalAlignment="Left" Margin="257,45,0,0" VerticalAlignment="Top" Height="205" Width="138"/>
        <Button x:Name="guncelButton" Content="Güncelle" HorizontalAlignment="Left" Margin="407,134,0,0" VerticalAlignment="Top" Width="67" Height="20" Click="guncelButton_Click"/>
        <DatePicker x:Name="testarDp" HorizontalAlignment="Left" Margin="108,122,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="silButton" Content="Sil" HorizontalAlignment="Left" Margin="407,94,0,0" VerticalAlignment="Top" Width="66" Height="20"/>
        <Label Content="Arama" HorizontalAlignment="Left" Margin="252,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="aramaTb" HorizontalAlignment="Left" Height="23" Margin="292,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="aramaButton" Content="" HorizontalAlignment="Left" Margin="372,22,0,0" VerticalAlignment="Top" Width="23" Click="aramaButton_Click"/>


    </Grid>

</Window>
