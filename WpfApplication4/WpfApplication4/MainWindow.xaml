        <TextBox x:Name="kmTb" HorizontalAlignment="Left" Height="23" Margin="108,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="renkCb" HorizontalAlignment="Left" Margin="108,150,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-1.342,0.439" SelectionChanged="renkCb_SelectionChanged">
