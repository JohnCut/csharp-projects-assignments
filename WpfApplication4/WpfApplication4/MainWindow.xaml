        <Label Content="Tescil Tarihi" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top"/>
        <Label Content="Renk" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top"/>
        <Label Content="Kilometresi" HorizontalAlignment="Left" Margin="10,172,0,0" VerticalAlignment="Top"/>
